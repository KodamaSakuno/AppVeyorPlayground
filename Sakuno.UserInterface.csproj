<Project Sdk="MSBuild.Sdk.Extras/1.5.4">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <OutputType>Library</OutputType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <LangVersion>7.3</LangVersion>
    <RootNamespace>Sakuno.UserInterface</RootNamespace>
    <AssemblyName>Sakuno.UserInterface</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath>$(SolutionDir)artifacts\$(Configuration)\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Sakuno.Base" Version="0.3.2" />
    <PackageReference Include="Sakuno.SystemLayer" Version="0.3.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="**\*.fx" />
    <Resource Include="**\*.ps" />
  </ItemGroup>

  <Target Name="PreBuild" AfterTargets="PreBuildEvent">
    <Exec Command="powershell -NoProfile -ExecutionPolicy Bypass -File $(SolutionDir)scripts\Execute-PreBuildEvent.ps1 -SolutionDir $(SolutionDir) -ProjectPath $(ProjectPath) -Configuration $(ConfigurationName) -TargetDir $(TargetDir) -TargetPath $(TargetPath)" />
  </Target>

</Project>
